ldren":479},"TOOLS","/tools",[480,483,486,489,492,495],{"title":481,"_path":482},"LwM2M API Registry","/tools/lwm2m-api-registry",{"title":484,"_path":485},"LwM2M Editor | Validator","/tools/lwm2m-editor-validator",{"title":487,"_path":488},"LwM2M Developer's Tool Kit","/tools/lwm2m-tool-kit",{"title":490,"_path":491},"LwM2M Guidelines","/tools/lwm2m-guidelines",{"title":493,"_path":494},"LwM2M Validation Error Codes","/tools/validation-errors",{"title":496,"_path":478},"LwM2M TOOLS",{"title":498,"_path":499},"Contact Us","/contact-us",{"title":501,"_path":502},"Frequently Asked Questions","/faq",{"title":504,"_path":505},"Open Mobile Alliance","/",{"title":507,"_path":508},"Newsletter","/newsletter",1728907219002]